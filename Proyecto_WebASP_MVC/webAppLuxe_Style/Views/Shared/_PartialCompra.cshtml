@model IEnumerable<webAppLuxe_Style.Models.Item>
@{
    Layout = "~/Views/Tienda/Agregar.cshtml";
}
<style>
.imgArtPeq {
width: 40px;
height: 45px;
float: left;
margin: 0px;
padding: 0px;
}
</style>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.talla)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subtotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.talla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subtotal)
            </td>
            <td>
                <img class="imgArtPeq"
                         src=@Url.Content(String.Format("~/Img/{0}.jpg",item.id_producto)) />
            </td>
                <td>@Html.ActionLink("ELIMINAR", "eliminar", new { id = item.id_producto })</td>
        </tr>
        }
</table>
